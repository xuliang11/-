/* 样式 */
.container{
  background-color: #f2f2f2;
  width: 100%;
  height: 100vh;
}
.user-info{
  padding-top: 60rpx;
  background-color: #fff;
}
.user-info .img image{
  display: block;
  height: 180rpx;
  width: 180rpx;
  border-radius:50%;
  margin: 30rpx auto 40rpx;
  box-shadow: 0 0 20rpx  rgba(0, 0, 0, .2);   

}
.user-info .user-name{
  display: block;
  width: 100%;
  padding:  30rpx 0;
  text-align: center;
}
.my-wallter{
  padding: 45rpx;
  background-color: #fff;
  margin-top: 40rpx;
  display: flex;
  align-content: center;
  justify-content: space-between;
}
.btn-login{
width: 90%;
position: absolute;
bottom:60px;
left: 5%; 
}